{
  "name": "onepass",
  "version": "0.0.1",
  "private": true,
  "author": "abhijithvijayan",
  "description": "OnePass Password Manager",
  "workspaces": {
    "packages": [
      "packages/*",
      "server"
    ],
    "nohoist": []
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "precommit": "lint-staged",
    "build:web": "yarn workspace @onepass/web build",
    "dev:server": "yarn workspace @onepass/server server",
    "dev:web": "concurrently \"yarn workspace @onepass/web dev\" \"yarn workspace @onepass/server server\" --names \"N,E\" --prefix name",
    "dev:mobile": "concurrently \"yarn workspace @onepass/mobile android\" \"yarn workspace @onepass/mobile start\""
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "concurrently": "^4.1.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-onepass": "0.0.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.3.0",
    "prettier": "^1.16.4"
  },
  "repository": "https://github.com/onepassapp/onepass.git",
  "dependencies": {
    "husky": "^2.5.0",
    "lint-staged": "^8.2.1"
  }
}
