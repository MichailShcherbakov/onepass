{
  "manifest_version": 2,
  "name": "@onepass/extension",
  "version": "0.0.1",
  "description": "Open-Source Password Manager",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "OnePass",
    "chrome_style": false
  },
  "author": "abhijithvijayan",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "homepage_url": "https://github.com/onepassapp/onepass.git",
  "minimum_chrome_version": "49",
  "permissions": [
    "<all_urls>",
    "clipboardWrite",
    "contextMenus",
    "idle",
    "nativeMessaging",
    "notifications",
    "privacy",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "short_name": "OnePass"
}
