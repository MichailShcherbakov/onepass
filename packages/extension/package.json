{
  "name": "@onepass/extension",
  "version": "0.0.1",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "start": "cross-env REACT_START_URL=http://localhost:3000/ run-p start:app add:scripts",
    "start:app": "react-app-rewired start",
    "wait-dev": "wait-on $REACT_START_URL",
    "add:scripts": "run-s wait-dev build:bg:dev",
    "build:bg:dev": "webpack --mode development ./src/background.js --output ./build/background.js",
    "prebuild": "rimraf build",
    "build": "npm-run-all build:*",
    "build:app": "react-app-rewired build",
    "build:bg": "webpack --mode production ./src/background.js --output ./build/background.js",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject"
  },
  "dependencies": {
    "@onepass/web": "0.0.1",
    "cross-env": "^5.2.0",
    "csp-html-webpack-plugin": "^3.0.2",
    "react": "^16.8.6",
    "react-app-rewire-babel-loader": "^0.1.1",
    "react-app-rewire-yarn-workspaces": "^1.0.3",
    "react-app-rewired": "^2.1.3",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "write-file-webpack-plugin": "^4.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "concurrently": "^4.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "wait-on": "^3.3.0",
    "webpack-cli": "^3.3.6"
  },
  "eslintConfig": {
    "extends": "onepass"
  },
  "keywords": [
    "onepass",
    "browser extension",
    "chrome extension",
    "firefox extension"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
